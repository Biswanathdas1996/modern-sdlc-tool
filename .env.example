# ===========================================
# DocuGen AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# PWC GenAI Configuration (Required for AI features)
# ===========================================
PWC_GENAI_ENDPOINT_URL=https://your-pwc-genai-endpoint.com/api/v1/chat/completions
PWC_GENAI_API_KEY=your-pwc-genai-api-key
PWC_GENAI_BEARER_TOKEN=your-pwc-genai-bearer-token

# ===========================================
# GitHub Configuration (Required for repository analysis)
# ===========================================
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_personal_access_token

# ===========================================
# JIRA Configuration (Required for JIRA sync)
# ===========================================
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_INSTANCE_URL=your-instance.atlassian.net
JIRA_PROJECT_KEY=KAN

# ===========================================
# Confluence Configuration (Required for publishing BRDs)
# ===========================================
CONFLUENCE_SPACE_KEY=~your-confluence-space-key

# ===========================================
# MongoDB Configuration (Required for Knowledge Base RAG)
# ===========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=your-app

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/docugen

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your-session-secret-key-here

# ===========================================
# Server Configuration
# ===========================================
PORT=5000
NODE_ENV=development

# ===========================================
# OpenAI Configuration (Legacy - for Replit integrations)
# Note: These are used by some Replit integration modules
# but main AI calls now use PWC GenAI
# ===========================================
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
